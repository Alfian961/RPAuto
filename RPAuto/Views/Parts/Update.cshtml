@model Part
@{
    ViewData["Title"] = "Parts";

    var CatID = new[]
{
new { value=1, text="One"},
new { value=2, text="Two"},
new { value=3, text="Three"}
};
}
<h2>@ViewData["Title"]</h2>
<div class="container">
    <form asp-controller="Parts" asp-action="Update">
        <div class="form-group row">
            <label class="control-label col-3 text-sm-right" asp-for="PartNumber">Part Number : </label>
            <div class="col-5">
                <input asp-for="PartNumber" class="form-control" readonly="readonly" />
            </div>

            <div class="col-3">
                <span asp-validation-for="PartNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-3 text-sm-right" asp-for="Title">Title : </label>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="col-3">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-3 text-sm-right" asp-for="Overview">Overview : </label>
            <div class="col-5">
                <input asp-for="Overview" class="form-control" />
            </div>

            <div class="col-3">
                <span asp-validation-for="Overview" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-3 text-sm-right" asp-for="CategoryId">Category ID: </label>
            <div class="col-4">
                @foreach (var item in CatID)
                {
                    <input type="radio" asp-for="CategoryId" value="@item.value"/> @item.value
                }
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-3 text-sm-right" asp-for="Qty">Qty : </label>
            <div class="col-5">
                <input asp-for="Qty" class="form-control" readonly="readonly" />
            </div>

            <div class="col-3">
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-3 col-6">
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </div>



    </form>
</div>
